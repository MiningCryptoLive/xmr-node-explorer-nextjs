// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Node {
  id       Int      @id @default(autoincrement())
  country  String?
  height   Int
  ip       String   @unique
  lastSeen DateTime @default(now())
  port     Int
  url      String?   @unique
  network  Network  @default(MAINNET)

}

enum Network {
  MAINNET
  STAGENET
  TESTNET
}
