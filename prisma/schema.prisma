datasource db {
  // use postgresql as provider if you are using a postegresql db
  provider     = "mysql"
  url          = env("localhost")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Node {
  id            Int         @id @default(autoincrement())
  country       String?
  countryCode   String?
  height        Int
  ip            String
  lastSeen      DateTime    @default(now())
  port          Int
  url           String?
  network       Network     @default(MAINNET)
  version       String?
  fee           Int?        @default(0)
  latitude      Decimal?
  longitude     Decimal?
  webCompatible Boolean     @default(false)
  heartbeats    Heartbeat[]

  @@unique([url, port], name: "nodeIdentifier")
  @@index([lastSeen])
}

model Heartbeat {
  id           Int      @id @default(autoincrement())
  time         DateTime @default(now())
  reachable    Boolean
  responseTime Int
  node         Node     @relation(fields: [nodeId], references: [id])
  nodeId       Int

  @@index([nodeId])
}

enum Network {
  MAINNET
  STAGENET
  TESTNET
}
