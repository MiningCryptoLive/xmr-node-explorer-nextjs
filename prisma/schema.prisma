datasource db {
  // use postgresql as provider if you are using a postegresql db
  provider     = "mysql"
  url          = env("DATABASE_URL")
  relationMode = "prisma"
}

generator client {
  provider = "prisma-client-js"
}

model Node {
  id          Int      @id @default(autoincrement())
  country     String?
  countryCode String?
  height      Int
  ip          String
  lastSeen    DateTime @default(now())
  port        Int
  url         String?
  network     Network  @default(MAINNET)
  version     String?
  fee         Int?     @default(0)
  latitude    Decimal?
  longitude   Decimal?

  @@unique([url, port], name: "nodeIdentifier")
  @@index([lastSeen])
}

enum Network {
  MAINNET
  STAGENET
  TESTNET
}
