datasource db {
  provider             = "mysql"
  url                  = env("DATABASE_URL")
  referentialIntegrity = "prisma"
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["referentialIntegrity"]
} 

model Node {
  id       Int      @id @default(autoincrement())
  country  String?
  height   Int
  ip       String   @unique
  lastSeen DateTime @default(now())
  port     Int
  url      String?  @unique
  network  Network  @default(MAINNET)

}

enum Network {
  MAINNET
  STAGENET
  TESTNET
}
